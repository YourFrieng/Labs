#include <iostream>
#include <cmath>
using namespace std;

double calculator(int x, int a);


int main()
{
	int x,a;
	double y;
	cout << "Write x: ";
	cin >> x;
	cout << "Write a: ";
	cin >> a;
	if ((a == 0)||((x + 2) == 0)) {
		cout << "Error, write another numbers, please";
	}
	else{
		y = calculator(x, a);
		cout << y;
	}
	

	return 0;
}




double calculator(int x , int a) {

	
		double y;

		y = (sin(2 * pow(x, 2)) / (x + 2)) + cos(x / (2 * a));
		
		return y;
	

	
}
